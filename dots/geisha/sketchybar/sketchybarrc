source "$HOME/.config/colors.sh"
source "$HOME/.config/icons.sh"

PLUGIN_DIR="$HOME/.config/sketchybar/plugins"
sketchybar --bar color=0x00000000 height=34 margin=0 y_offset=3 padding_left=8 padding_right=0 sticky=on topmost=window
sketchybar --default padding_left=8 padding_right=4                    \
                     background.border_color=$COLOR_DEFAULT             \
                     background.border_width=2                         \
                     background.height=34                              \
                     background.corner_radius=12                       \
                     icon.color=$COLOR_DEFAULT                          \
                     icon.highlight_color=$COLOR_BACKGROUND            \
                     icon.padding_left=6 icon.padding_right=2          \
                     icon.font="Nerd Font:Regular:16.0"                \
                     label.color=$COLOR_DEFAULT                         \
                     label.highlight_color=$COLOR_BACKGROUND           \
                     label.padding_left=2 label.padding_right=6        \
                     label.font="Nerd Font:Bold:12.0"

sketchybar --add event window_change \
           --add event window_focus \
           --add event title_change

sketchybar --add item apple left --set apple background.border_width=0 background.height=24 icon=ã€‡  click_script="./bin/menus -s 0"  --subscribe apple mouse.clicked \
           --add bracket button apple --set button background.color=$COLOR_BACKGROUND background.border_color=$COLOR_DEFAULT \
           --add item sep.l1 left --set sep.l1 padding_left=4 padding_right=4 background.drawing=off icon.drawing=off label.drawing=off

LENGTH=${#ICONS_SPACE[@]}
for i in "${!ICONS_SPACE[@]}"
do
  sid=$((i+1))
  PAD_LEFT=2
  PAD_RIGHT=8
  if [[ $i == 0 ]]; then
    PAD_LEFT=8
  elif [[ $i == $((LENGTH-1)) ]]; then
    PAD_RIGHT=8
  fi
  sketchybar --add space space.$sid left --set space.$sid script="$PLUGIN_DIR/app_space.sh" associated_space=$sid padding_left=$PAD_LEFT padding_right=$PAD_RIGHT background.color=$COLOR_DEFAULT background.border_width=0 background.corner_radius=6 background.height=24 icon="${ICONS_SPACE[$i]}" --subscribe space.$sid front_app_switched window_change
done
sketchybar --add bracket spaces '/space\..*/' --set spaces background.color=$COLOR_BACKGROUND

sketchybar --add item logo center --set logo script="$PLUGIN_DIR/logo.sh" background.border_width=0 background.height=24 icon=$ICON_FILE --subscribe logo window_focus front_app_switched space_change title_change \
           --add bracket app logo --set app background.color=$COLOR_BACKGROUND background.border_color=$COLOR_DEFAULT
sketchybar --add item sep.c1 center --set sep.c1 padding_left=4 padding_right=4 background.drawing=off icon.drawing=off label.drawing=off
sketchybar --add item title center --set title script="$PLUGIN_DIR/title.sh" padding_left=2 padding_right=8 background.border_width=0 background.height=24 --subscribe title window_focus front_app_switched space_change title_change \
           --add bracket window title --set window background.color=$COLOR_BACKGROUND background.border_color=$COLOR_DEFAULT
sketchybar --add item sep.c2 center --set sep.c2 padding_left=4 padding_right=4 background.drawing=off icon.drawing=off label.drawing=off
sketchybar --add item yabai_mode center --set yabai_mode padding_left=3 padding_right=10 update_freq=1 script="$PLUGIN_DIR/yabai.sh" click_script="$PLUGIN_DIR/yabai_click.sh" --subscribe yabai_mode mouse.clicked window_focus front_app_switched space_change title_change \
           --add bracket yabai yabai_mode --set yabai background.color=$COLOR_BACKGROUND background.border_color=$COLOR_DEFAULT

sketchybar --add item sep.r1 right --set sep.r1 padding_left=4 padding_right=4 background.drawing=off icon.drawing=off label.drawing=off

sketchybar --add item centre right --set centre icon.color=$COLOR_DEFAULT background.color=$COLOR_BACKGROUND icon=$ICON_CMD padding_left=6 padding_right=4 icon.padding_left=8 icon.padding_right=0 background.border_width=0 background.corner_radius=6 background.height=24 click_script="osascript -e 'tell application \"System Events\" to click menu bar item 2 of menu bar 1 of application process \"ControlCenter\"'" \
           --add bracket control centre --set control background.color=$COLOR_BACKGROUND background.border_color=$COLOR_DEFAULT \
           --add item sep.r2 right --set sep.r2 padding_left=4 padding_right=4 background.drawing=off icon.drawing=off label.drawing=off

sketchybar --add item time right --set time script="$PLUGIN_DIR/time.sh" update_freq=5 padding_left=6 padding_right=8 background.border_width=0 background.corner_radius=6 background.height=24 click_script="osascript -e 'tell application \"System Events\" to click menu bar item 1 of menu bar 1 of application process \"ControlCenter\"'" \
           --add bracket clock time --set clock background.color=$COLOR_BACKGROUND background.border_color=$COLOR_DEFAULT \
           --add item sep.r3 right --set sep.r3 padding_left=4 padding_right=4 background.drawing=off icon.drawing=off label.drawing=off

sketchybar --add item wifi right --set wifi script="$PLUGIN_DIR/wifi.sh" update_freq=5 padding_left=2 padding_right=8 background.border_width=0 background.corner_radius=6 background.height=24 click_script="osascript -e 'tell application \"System Events\" to click menu bar item 3 of menu bar 1 of application process \"ControlCenter\"'" --subscribe wifi wifi_change \
           --add item volume right --set volume script="$PLUGIN_DIR/volume.sh" padding_left=4 padding_right=4 background.border_width=0 background.corner_radius=6 background.height=24 click_script="osascript -e 'tell application \"System Events\" to click menu bar item 4 of menu bar 1 of application process \"ControlCenter\"'" --subscribe volume volume_change \
           --add item battery right --set battery script="$PLUGIN_DIR/battery.sh" update_freq=120 padding_left=8 padding_right=2 background.border_width=0 background.corner_radius=6 background.height=24 click_script="osascript -e 'tell application \"System Events\" to click menu bar item 5 of menu bar 1 of application process \"ControlCenter\"'" --subscribe battery system_woke power_source_change \
           --add bracket status wifi volume battery --set status background.color=$COLOR_BACKGROUND background.border_color=$COLOR_DEFAULT \
           --add item seperator.r5 right --set seperator.r5 padding_left=4 padding_right=4 background.drawing=off icon.drawing=off label.drawing=off

sketchybar --hotload true
sketchybar --update
